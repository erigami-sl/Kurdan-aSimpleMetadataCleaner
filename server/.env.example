# Server Configuration
PORT=3000

# CORS - Comma separated origins
ALLOWED_ORIGINS=http://localhost:5173

# Environment
NODE_ENV=development

# Proxy (set to true if behind nginx/cloudflare)
BEHIND_PROXY=false

# Security
# Set to 'true' to force HTTPS redirect (required for production domains with SSL)
# Keep 'false' or empty for local Docker testing without SSL
FORCE_HTTPS=false

# Static File Serving (for Docker/Production)
SERVE_STATIC=true
STATIC_DIR=/app/dist
